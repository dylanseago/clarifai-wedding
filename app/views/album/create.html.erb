<style>

#flipbook {
  margin-top: 60px;
  width:960px;
  height:600px;
  margin-bottom: 100px;
  -webkit-transition:margin-left 0.2s;
  -moz-transition:margin-left 0.2s;
  -ms-transition:margin-left 0.2s;
  -o-transition:margin-left 0.2s;
  transition:margin-left 0.2s;
}

body{
  padding-top: 10px;
  overflow:hidden;
}

.page{
  background: url(<%= image_url('pages.png') %>) !important;
  font-size:30px;
}

.hard {
  background: url(<%= image_url('book-covers.jpg') %>) no-repeat !important;
}

.front-outer {
  background-position: 0 0 !important;
}

.front-inner {
  background-position: -480px 0 !important;
}

.back-inner {
  left: 4px;
  background-position: -960px 0 !important;
}

.back-outer {
  right: 4px;
  background-position: -1440px 0 !important;
}

.depth {
  background-image: url(<%= image_url('pages-depth.png') %>);
  position: absolute;
  top: 7px;
  width: 16px;
  height: 590px;
}

.back-inner .depth {
  background-position: right 0;
}

.front-inner .depth {
  background-position: 0 0;
}

.soft {
  width: 460px;
  height: 582px;
}

.soft.odd {
  background-position: 460px 0 !important;
}

.soft.even {
  background-position: 0 0 !important;
}

.hard{
  color:#333;
  line-height:400px;
  font-weight:bold;
}

.inner-page {
  width: 100%;
  height: 100%;
  padding: 6%;
  box-sizing: border-box;
}

.btn-custom{
  background-color: #EEEEEE;
  border-color: #EEEEEE;
  margin-top: 8px;
  width: 100px;
  height: 40px;
}

.page-img-wide {
  max-width: 100%;
  max-height: 47.5%;
  vertical-align: middle;
}

.divider {
  display: block;
  height: 5%;
  width: 100%;
}

.page-img-tall {
  max-width: 100%;
  max-height:100%;
  vertical-align: middle;
}

.page-img-header {
  max-width: 100%;
  max-height: 60%;
}

.shadow{
  box-shadow: 0 4px 10px #666;
}

.tag-header {
  font-family: fancyFont;
  font-size: 60px;
  margin-top: 10%;
  margin-bottom: 15%;
}

</style>

<script>
  $(document).ready(function() {
    var fb = $('#flipbook');
    fb.turn({ autoCenter: true });
    var pageCount = fb.turn('pages');

    fb.bind('turned', function(e, page, view) {
      // Ensure covers stay fixed behind pages
      if (page == 1) {
        $('.front-inner').removeClass('fixed');
      } else {
        $('.front-inner').addClass('fixed');
      }
      if (page == pageCount) {
        $('.back-inner').removeClass('fixed');
      } else {
        $('.back-inner').addClass('fixed');
      }

      // Scale the page depth
      var leftWidth = 16;
      var rightWidth = 16;
      var rPage = page - (page % 2 == 0 ? 0 : 1); // Even out for consistent depths
      if (rPage > pageCount / 2) {
        if (rPage > pageCount - 5) {
          rightWidth = 0;
        } else {
          rightWidth *= ((pageCount - rPage) / (pageCount / 2));
        }
      } else {
        if (rPage < 6) {
          leftWidth = 0;
        } else {
          leftWidth *= (rPage / (pageCount / 2));
        }
      }
      $('.front-inner .depth').css({ width: leftWidth + 'px', left: (20 - leftWidth) + 'px' });
      $('.back-inner .depth').css({ width: rightWidth + 'px', right: (20 - rightWidth) + 'px' });
    });

  });
</script>

<div style="display:block; height: 20px;" ></div>

<%= button_to "Home", { action: "home", controller: "pages"},  class: "btn btn-lg btn-primary btn-custom", method: :get %>
<%= button_to "Share", { action: "share", controller: "album"},  class: "btn btn-lg btn-primary btn-custom", method: :get, :remote => true %>



<div id="flipbook">
  <div class="hard front-outer"></div>
  <div class="hard front-inner">
    <div class="depth" style="width: 0;"></div>
  </div>


  <% page_count = 0 %>
  <% wide_var = 0 %>
  <% (0..6).each do |i| %>


    <div class="soft own-size">
      <div class="inner-page">

        <% page_count += 1 %>

        <h1 class="tag-header"><%= @tags[i] %></h1>

        <%= image_tag(@image_array[i][0].file.url, class: "page-img-header") %>

      </div>
    </div>


    <div class="soft own-size">
      <div class="inner-page">
        <% @image_array[i][1].each_with_index do |p, i| %>
          <% page_count += 1 %>

          <% if p.size == 1 %>
            <%= image_tag(p[0].file.url, class: "page-img-tall") %>
          <% else %>
            <%= image_tag(p[0].file.url, class: "page-img-wide") %>
            <div class="divider"></div>
            <%= image_tag(p[1].file.url, class: "page-img-wide") %>
          <% end %>

          <% if i != @image_array[i][1].size - 1 %>
            </div>
            </div>
            <div class="soft own-size">
            <div class="inner-page">
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if page_count.odd? %>
    <div class="soft own-size"></div>
  <% end %>
  <div class="hard back-inner fixed">
    <div class="depth" style="width: 0;"></div>
  </div>
  <div class="hard back-outer"></div>
</div>
